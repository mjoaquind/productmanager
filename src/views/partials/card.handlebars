<div id="product-card" class="col-md-4 mb-4">
    <div class="card">
        <div id="{{this._id}}" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {{#each this.thumbnail}}
                    <div class="carousel-item {{#if @first}}active{{/if}}">
                        <img src="{{this}}" class="d-block w-100" alt="Imagen del producto">
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Precio: $ {{this.price}}</p>
            <p class="card-text">CÃ³digo: {{this.code}}</p>
        </div>
        <div class="d-flex justify-content-center mb-4">
            <form action="/api/carts" method="POST">
                <input type="submit" value="Comprar" class="btn btn-primary">
            </form>
            <!--<button type="button" class="btn btn-primary" data-product-id="{{product._id}}" onclick="addProductToCart('{{product._id}}')">Agregar</button>-->
        </div>
    </div>
</div>